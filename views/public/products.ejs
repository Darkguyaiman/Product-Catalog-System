<section class="container products-page-container" style="padding-top: 2rem; padding-bottom: 3rem;">
    <div class="card products-header-card" style="padding: 1.25rem 1.5rem; margin-bottom: 1.25rem;">
        <div class="header-flex-container">
            <div class="header-title-group">
                <h1 style="margin: 0; font-size: 1.75rem;">Our Products</h1>
                <p style="margin: 0; color: var(--gray-500); font-size: 0.95rem;">Browse the catalog and explore product
                    details.</p>
            </div>
            <div class="header-actions-group">
                <div class="search-wrapper">
                    <i class="fa-solid fa-search"
                        style="position: absolute; left: 0.75rem; top: 50%; transform: translateY(-50%); color: var(--gray-400);"></i>
                    <input type="text" placeholder="Search products..."
                        style="width: 100%; padding: 0.6rem 0.9rem 0.6rem 2.2rem; border: 1px solid var(--gray-300); border-radius: 8px; font-size: 0.95rem;">
                </div>
                <select class="sort-select"
                    style="padding: 0.6rem 0.9rem; border: 1px solid var(--gray-300); border-radius: 8px; font-size: 0.95rem;">
                    <option>Sort: Newest</option>
                    <option>Sort: Code</option>
                    <option>Sort: Model</option>
                </select>
            </div>
        </div>
    </div>

    <div class="main-layout-container">
        <!-- Sidebar -->
        <div class="card categories-sidebar">
            <h3
                style="font-size: 1.1rem; margin-bottom: 1rem; padding-bottom: 0.5rem; border-bottom: 1px solid var(--gray-200);">
                Categories</h3>
            <ul style="list-style: none; padding: 0; margin: 0;">
                <% categories.filter(c=> !c.parent_id).forEach(c => { %>
                    <li style="margin-bottom: 0.75rem;">
                        <a href="#"
                            style="font-weight: 600; color: var(--gray-800); display: flex; justify-content: space-between; align-items: center;">
                            <%= c.name %>
                                <i class="fa-solid fa-chevron-right"
                                    style="font-size: 0.7rem; color: var(--gray-400);"></i>
                        </a>
                        <% const subs=categories.filter(s=> s.parent_id === c.id); %>
                            <% if(subs.length> 0) { %>
                                <ul
                                    style="list-style: none; padding-left: 0.75rem; margin-top: 0.5rem; border-left: 2px solid var(--gray-200);">
                                    <% subs.forEach(s=> { %>
                                        <li style="margin-bottom: 0.4rem;">
                                            <a href="#" style="font-size: 0.9rem; color: var(--gray-600);">
                                                <%= s.name %>
                                            </a>
                                        </li>
                                        <% }) %>
                                </ul>
                                <% } %>
                    </li>
                    <% }) %>
            </ul>

            <div class="sidebar-help-box" style="margin-top: 2rem;">
                <h3
                    style="font-size: 1.1rem; margin-bottom: 1rem; padding-bottom: 0.5rem; border-bottom: 1px solid var(--gray-200);">
                    Need Help?</h3>
                <p style="font-size: 0.9rem; color: var(--gray-500); margin-bottom: 1rem;">Contact our product
                    specialists for detailed specifications.</p>
                <button class="btn btn-secondary w-100 btn-sm">Contact Us</button>
            </div>
        </div>

        <!-- Products List -->
        <div class="products-list-wrapper">
            <% if (products.length===0) { %>
                <div class="card text-center" style="padding: 3rem;">
                    <i class="fa-solid fa-box-open"
                        style="font-size: 2.5rem; color: var(--gray-300); margin-bottom: 1rem;"></i>
                    <p style="color: var(--gray-500);">No products available yet.</p>
                </div>
                <% } else { %>
                    <div class="grid grid-3 product-grid-responsive">
                        <% products.forEach(p=> { %>
                            <div class="card"
                                style="padding: 0; overflow: hidden; border: none; box-shadow: var(--shadow);">
                                <div
                                    style="height: 180px; background: linear-gradient(135deg, var(--gray-100) 0%, var(--white) 100%); display: flex; align-items: center; justify-content: center; overflow: hidden;">
                                    <% if (p.product_image) { %>
                                        <img src="<%= p.product_image %>" alt="<%= p.model %>"
                                            style="width: 100%; height: 100%; object-fit: cover;">
                                        <% } else { %>
                                            <i class="fa-solid fa-box-open"
                                                style="font-size: 3.5rem; color: var(--gray-300);"></i>
                                            <% } %>
                                </div>
                                <div style="padding: 1.25rem;">
                                    <div class="d-flex justify-between align-center mb-2">
                                        <span class="badge badge-primary" style="font-size: 0.7rem;">
                                            <%= p.code %>
                                        </span>
                                        <span style="font-size: 0.8rem; color: var(--gray-500);">
                                            <%= p.mda_reg_no || '' %>
                                        </span>
                                    </div>
                                    <h3 style="font-size: 1.1rem; margin-bottom: 0.5rem; color: var(--blue-darkest);">
                                        <%= p.model %>
                                    </h3>
                                    <p
                                        style="color: var(--gray-600); font-size: 0.9rem; margin-bottom: 1rem; height: 3em; overflow: hidden; display: -webkit-box; -webkit-line-clamp: 2; line-clamp: 2; -webkit-box-orient: vertical;">
                                        <%= p.description ? (p.description.length> 100 ? p.description.substring(0, 100)
                                            + '...' : p.description) : 'No description available.' %>
                                    </p>
                                    <a href="/product/<%= p.id %>" class="btn btn-secondary w-100 btn-sm">View
                                        Details</a>
                                </div>
                            </div>
                            <% }) %>
                    </div>

                    <div class="d-flex justify-between align-center pagination-row" style="margin-top: 1.25rem;">
                        <span style="font-size: 0.9rem; color: var(--gray-500);">Showing <%= products.length %>
                                results</span>
                        <div style="display: flex; gap: 0.5rem;">
                            <button class="btn btn-outline btn-sm" disabled><i
                                    class="fa-solid fa-chevron-left"></i></button>
                            <button class="btn btn-outline btn-sm" disabled><i
                                    class="fa-solid fa-chevron-right"></i></button>
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>
</section>

<style>
    .header-flex-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1.5rem;
    }

    .header-actions-group {
        display: flex;
        gap: 1rem;
    }

    .search-wrapper {
        position: relative;
        width: 320px;
    }

    .main-layout-container {
        display: flex;
        gap: 2rem;
        align-items: flex-start;
    }

    .categories-sidebar {
        width: 280px;
        flex-shrink: 0;
        padding: 1.25rem;
    }

    .products-list-wrapper {
        flex: 1;
    }

    @media screen and (max-width: 992px) {
        .header-flex-container {
            flex-direction: column;
            align-items: flex-start;
        }

        .header-actions-group {
            width: 100%;
        }

        .search-wrapper {
            flex: 1;
        }

        .main-layout-container {
            flex-direction: column;
        }

        .categories-sidebar {
            width: 100%;
        }
    }

    @media screen and (max-width: 576px) {
        .header-actions-group {
            flex-direction: column;
        }

        .search-wrapper {
            width: 100%;
        }

        .sort-select {
            width: 100%;
        }

        .product-grid-responsive {
            grid-template-columns: 1fr;
        }

        .pagination-row {
            flex-direction: column;
            gap: 1rem;
            align-items: center;
        }
    }
</style>