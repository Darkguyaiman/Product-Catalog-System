        font-size: 0.8rem;
        text-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Tab switching logic
        const triggers = document.querySelectorAll('.tab-trigger');
        const panes = document.querySelectorAll('.tab-pane');

        triggers.forEach(trigger => {
            trigger.addEventListener('click', function () {
                const target = this.getAttribute('data-tab');

                // Update active trigger
                triggers.forEach(t => t.classList.remove('active'));
                this.classList.add('active');

                // Update active pane
                panes.forEach(p => {
                    p.classList.remove('active');
                    if (p.id === target) p.classList.add('active');
                });
            });
        });

        // Share button functionality
        const shareButton = document.getElementById('shareButton');
        if (shareButton) {
            shareButton.addEventListener('click', async function () {
                const productName = '<%= product.model || product.code %>';
                const productUrl = window.location.href;
                const shareData = {
                    title: productName,
                    text: `Check out this product: ${productName}`,
                    url: productUrl
                };

                try {
                    if (navigator.share) {
                        await navigator.share(shareData);
                    } else {
                        await navigator.clipboard.writeText(productUrl);
                        const originalText = shareButton.innerHTML;
                        shareButton.innerHTML = '<i class="fa-solid fa-check"></i> Copied!';
                        shareButton.style.background = 'var(--success)';
                        shareButton.style.color = 'var(--white)';
                        setTimeout(() => {
                            shareButton.innerHTML = originalText;
                            shareButton.style.background = '';
                            shareButton.style.color = '';
                        }, 2000);
                    }
                } catch (err) {
                    if (err.name !== 'AbortError') {
                        try {
                            await navigator.clipboard.writeText(productUrl);
                            const originalText = shareButton.innerHTML;
                            shareButton.innerHTML = '<i class="fa-solid fa-check"></i> Copied!';
                            shareButton.style.background = 'var(--success)';
                            shareButton.style.color = 'var(--white)';
                            setTimeout(() => {
                                shareButton.innerHTML = originalText;
                                shareButton.style.background = '';
                                shareButton.style.color = '';
                            }, 2000);
                        } catch (clipboardErr) {
                            console.error('Failed to share or copy:', clipboardErr);
                        }
                    }
                }
            });
        }

        // Image Gallery Logic
        const slides = document.querySelectorAll('.slide');
        const thumbnails = document.querySelectorAll('.thumbnail-item');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const currentIndexSpan = document.getElementById('currentImageIndex');
        const mainImageWrapper = document.getElementById('mainImageWrapper');

        let currentIndex = 0;
        const totalImages = slides.length;
        let isTransitioning = false;
        let touchStartX = 0, touchEndX = 0, touchStartY = 0, touchEndY = 0;
        const minSwipeDistance = 50;

        if (totalImages > 0) {
            slides.forEach((slide, idx) => {
                slide.style.zIndex = '0';
                if (!slide.classList.contains('active')) {
                    slide.style.opacity = '0';
                    slide.style.visibility = 'hidden';
                }
            });

            const activeSlide = document.querySelector('.slide.active');
            if (activeSlide) {
                currentIndex = parseInt(activeSlide.dataset.index) || 0;
                activeSlide.style.opacity = '1';
                activeSlide.style.visibility = 'visible';
                activeSlide.style.transform = 'translateX(0) scale(1)';
                activeSlide.style.zIndex = '2';
            }
        }

        function updateIndicator() {
            if (currentIndexSpan) currentIndexSpan.textContent = currentIndex + 1;
        }

        function showSlide(index, direction = 'next') {
            if (isTransitioning || index < 0 || index >= totalImages) return;
            isTransitioning = true;
            const prevIndex = currentIndex;
            currentIndex = index;

            slides.forEach((slide, idx) => {
                slide.classList.remove('active', 'prev', 'next');
                slide.style.zIndex = '0';
                if (idx !== currentIndex) {
                    slide.style.opacity = '0';
                    slide.style.visibility = 'hidden';
                }
            });

            if (direction === 'next') {
                if (slides[prevIndex]) slides[prevIndex].classList.add('prev');
                if (slides[currentIndex]) slides[currentIndex].classList.add('active');
            } else {
                if (slides[prevIndex]) slides[prevIndex].classList.add('next');
                if (slides[currentIndex]) slides[currentIndex].classList.add('active');
            }

            slides[currentIndex].style.zIndex = '2';

            thumbnails.forEach((thumb, idx) => {
                thumb.classList.toggle('active', idx === currentIndex);
            });

            updateIndicator();

            setTimeout(() => {
                isTransitioning = false;
                slides.forEach((slide, idx) => {
                    slide.classList.remove('prev', 'next');
                    if (idx !== currentIndex) {
                        slide.style.zIndex = '0';
                        slide.style.opacity = '0';
                        slide.style.visibility = 'hidden';
                    } else {
                        slide.style.zIndex = '2';
                        slide.style.opacity = '1';
                        slide.style.visibility = 'visible';
                    }
                });
            }, 500);
        }

        if (prevBtn && nextBtn && totalImages > 1) {
            prevBtn.addEventListener('click', () => showSlide((currentIndex - 1 + totalImages) % totalImages, 'prev'));
            nextBtn.addEventListener('click', () => showSlide((currentIndex + 1) % totalImages, 'next'));
        }

        thumbnails.forEach((thumbnail, index) => {
            thumbnail.addEventListener('click', function () {
                if (index !== currentIndex && !isTransitioning) {
                    showSlide(index, index > currentIndex ? 'next' : 'prev');
                }
            });
        });

        // Swipe/Drag support
        if (mainImageWrapper && totalImages > 1) {
            mainImageWrapper.addEventListener('touchstart', e => {
                touchStartX = e.changedTouches[0].screenX;
                touchStartY = e.changedTouches[0].screenY;
            }, { passive: true });

            mainImageWrapper.addEventListener('touchend', e => {
                touchEndX = e.changedTouches[0].screenX;
                touchEndY = e.changedTouches[0].screenY;
                const deltaX = touchEndX - touchStartX;
                const deltaY = touchEndY - touchStartY;
                if (Math.abs(deltaX) > Math.abs(deltaY) && Math.abs(deltaX) > minSwipeDistance) {
                    if (deltaX > 0) showSlide((currentIndex - 1 + totalImages) % totalImages, 'prev');
                    else showSlide((currentIndex + 1) % totalImages, 'next');
                }
            }, { passive: true });

            let isMouseDown = false, mouseStartX = 0;
            mainImageWrapper.addEventListener('mousedown', e => {
                isMouseDown = true;
                mouseStartX = e.clientX;
                mainImageWrapper.style.cursor = 'grabbing';
            });
            mainImageWrapper.addEventListener('mouseup', e => {
                if (isMouseDown) {
                    const deltaX = e.clientX - mouseStartX;
                    if (Math.abs(deltaX) > minSwipeDistance) {
                        if (deltaX > 0) showSlide((currentIndex - 1 + totalImages) % totalImages, 'prev');
                        else showSlide((currentIndex + 1) % totalImages, 'next');
                    }
                    isMouseDown = false;
                    mainImageWrapper.style.cursor = 'grab';
                }
            });
            mainImageWrapper.addEventListener('mouseleave', () => {
                isMouseDown = false;
                mainImageWrapper.style.cursor = 'grab';
            });
        }

        document.addEventListener('keydown', e => {
            if (totalImages <= 1) return;
            if (e.key === 'ArrowLeft') showSlide((currentIndex - 1 + totalImages) % totalImages, 'prev');
            else if (e.key === 'ArrowRight') showSlide((currentIndex + 1) % totalImages, 'next');
        });

        // Preview Modal Logic
        const modal = document.createElement('div');
        modal.className = 'preview-modal';
        modal.innerHTML = `
            <div class="preview-content-container">
                <div class="preview-header">
                    <h3 class="preview-title">Preview</h3>
                    <button class="preview-close" aria-label="Close preview">&times;</button>
                </div>
                <div class="preview-body"></div>
            </div>
        `;
        document.body.appendChild(modal);

        const modalBody = modal.querySelector('.preview-body');
        const modalTitle = modal.querySelector('.preview-title');
        const closeBtn = modal.querySelector('.preview-close');

        // Function to convert Google Drive URLs to direct image URLs
        function convertGoogleDriveUrl(url) {
            if (!url || typeof url !== 'string') return url;
            
            // Check if it's a Google Drive URL
            if (url.includes('drive.google.com')) {
                // Extract file ID from various Google Drive URL formats
                let fileId = null;
                
                // Format: https://drive.google.com/file/d/FILE_ID/view
                const fileMatch = url.match(/\/file\/d\/([a-zA-Z0-9_-]+)/);
                if (fileMatch) {
                    fileId = fileMatch[1];
                    return `https://drive.google.com/uc?export=view&id=${fileId}`;
                }
                
                // Format: https://drive.google.com/uc?id=FILE_ID or ?id=FILE_ID
                const idMatch = url.match(/[?&]id=([a-zA-Z0-9_-]+)/);
                if (idMatch) {
                    fileId = idMatch[1];
                    return `https://drive.google.com/uc?export=view&id=${fileId}`;
                }
                
                // Format: https://drive.google.com/open?id=FILE_ID
                const openMatch = url.match(/open[?&]id=([a-zA-Z0-9_-]+)/);
                if (openMatch) {
                    fileId = openMatch[1];
                    return `https://drive.google.com/uc?export=view&id=${fileId}`;
                }
            }
            
            return url;
        }

        function openModal(type, src, title) {
            modalBody.innerHTML = '';
            modalTitle.textContent = title || 'Preview';

            if (type === 'image') {
                const img = document.createElement('img');
                // Convert Google Drive URLs to direct image URLs
                img.src = convertGoogleDriveUrl(src);
                img.onerror = function() {
                    // If direct URL fails, try opening in new tab
                    window.open(src, '_blank');
                    closeModal();
                };
                modalBody.appendChild(img);
            } else if (type === 'video') {
                let embedUrl = src;
                if (src.includes('youtube.com/watch?v=')) embedUrl = src.replace('watch?v=', 'embed/');
                else if (src.includes('youtu.be/')) embedUrl = `https://www.youtube.com/embed/${src.split('/').pop().split('?')[0]}`;
                else if (src.includes('vimeo.com/')) embedUrl = `https://player.vimeo.com/video/${src.split('/').pop().split('?')[0]}`;

                const iframe = document.createElement('iframe');
                iframe.src = embedUrl;
                iframe.allow = "accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture";
                iframe.allowFullscreen = true;
                modalBody.appendChild(iframe);
            } else if (type === 'pdf') {
                const iframe = document.createElement('iframe');
                iframe.src = src;
                modalBody.appendChild(iframe);
            } else if (type === 'office') {
                const iframe = document.createElement('iframe');
                iframe.src = `https://view.officeapps.live.com/op/embed.aspx?src=${encodeURIComponent(src)}`;
                modalBody.appendChild(iframe);
            }

            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeModal() {
            modal.classList.remove('active');
            document.body.style.overflow = '';
            setTimeout(() => { modalBody.innerHTML = ''; }, 300);
        }

        closeBtn.addEventListener('click', closeModal);
        modal.addEventListener('click', e => { if (e.target === modal) closeModal(); });
        document.addEventListener('keydown', e => { if (e.key === 'Escape' && modal.classList.contains('active')) closeModal(); });

        // Use capture phase so clicks on elements that call stopPropagation()
        // (e.g. multimedia thumbnails) are still caught here for the modal
        document.addEventListener('click', e => {
            const trigger = e.target.closest('.preview-trigger');
            if (trigger) {
                e.preventDefault();
                const { previewType, previewSrc, previewTitle } = trigger.dataset;
                if (previewType && previewSrc) openModal(previewType, previewSrc, previewTitle);
            }
        }, true);

        updateIndicator();
    });
</script>