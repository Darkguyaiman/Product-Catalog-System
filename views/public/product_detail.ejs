<div class="container product-detail-container" style="padding-top: 3rem; padding-bottom: 2rem;">
    <!-- Modern Breadcrumb -->
    <nav class="breadcrumb-nav mb-4">
        <a href="/products" class="back-link">
            <i class="fa-solid fa-arrow-left"></i> <span>Back to Catalog</span>
        </a>
    </nav>

    <div class="product-main-card card mb-5">
        <div class="product-detail-flex">
            <!-- Left: Premium Image Gallery -->
            <div class="product-gallery">
                <div class="gallery-container">
                    <div class="main-image-wrapper" id="mainImageWrapper">
                        <div class="image-slider">
                            <% if (productImages && productImages.length> 0) { %>
                                <% productImages.forEach((img, index)=> { %>
                                    <div class="slide <%= index === 0 ? 'active' : '' %>" data-index="<%= index %>">
                                        <img src="<%= img.image_path %>" alt="<%= product.model %>"
                                            class="main-product-image preview-trigger" data-preview-type="image"
                                            data-preview-src="<%= img.image_path %>"
                                            data-preview-title="<%= product.model %>">
                                    </div>
                                    <% }) %>
                                        <% } else if (product.product_image) { %>
                                            <div class="slide active" data-index="0">
                                                <img src="<%= product.product_image %>" alt="<%= product.model %>"
                                                    class="main-product-image preview-trigger" data-preview-type="image"
                                                    data-preview-src="<%= product.product_image %>"
                                                    data-preview-title="<%= product.model %>">
                                            </div>
                                            <% } else { %>
                                                <div class="slide active" data-index="0">
                                                    <div class="detail-image-placeholder">
                                                        <i class="fa-solid fa-box-open"></i>
                                                    </div>
                                                </div>
                                                <% } %>
                        </div>

                        <% if (productImages && productImages.length> 1) { %>
                            <button class="gallery-nav-btn gallery-prev" id="prevBtn" aria-label="Previous image">
                                <i class="fa-solid fa-chevron-left"></i>
                            </button>
                            <button class="gallery-nav-btn gallery-next" id="nextBtn" aria-label="Next image">
                                <i class="fa-solid fa-chevron-right"></i>
                            </button>
                            <div class="gallery-indicator">
                                <span id="currentImageIndex">1</span> / <span id="totalImages">
                                    <%= productImages.length %>
                                </span>
                            </div>
                            <% } %>

                                <% if (product.mda_cert) { %>
                                    <div class="mda-cert-overlay">
                                        <a href="<%= product.mda_cert %>" target="_blank"
                                            class="badge badge-success preview-trigger" data-preview-type="pdf"
                                            data-preview-src="<%= product.mda_cert %>"
                                            data-preview-title="MDA Certificate">
                                            <i class="fa-solid fa-certificate"></i> MDA Certified
                                        </a>
                                    </div>
                                    <% } %>
                    </div>

                    <% if (productImages && productImages.length> 1) { %>
                        <div class="image-thumbnails">
                            <% productImages.forEach((img, index)=> { %>
                                <div class="thumbnail-item <%= index === 0 ? 'active' : '' %>"
                                    data-image-index="<%= index %>" data-image-src="<%= img.image_path %>">
                                    <img src="<%= img.image_path %>" alt="Thumbnail <%= index + 1 %>">
                                    <div class="thumbnail-overlay"></div>
                                </div>
                                <% }) %>
                        </div>
                        <% } %>
                </div>
            </div>

            <!-- Right: Product Information -->
            <div class="product-essentials">
                <div class="essential-header mb-4">
                    <div class="d-flex align-center gap-2 mb-3 flex-wrap">
                        <span class="badge badge-primary">
                            <i class="fa-solid fa-barcode"></i>
                            Code: <%= product.code %>
                        </span>
                        <% if (product.mda_reg_no) { %>
                            <a href="<%= product.mda_cert %>" target="_blank"
                                class="badge badge-outline preview-trigger" data-preview-type="pdf"
                                data-preview-src="<%= product.mda_cert %>"
                                data-preview-title="MDA Certificate: <%= product.mda_reg_no %>"
                                style="text-decoration: none; cursor: pointer;">
                                <i class="fa-solid fa-shield-halved mr-1"></i> MDA: <%= product.mda_reg_no %>
                            </a>
                            <% } %>
                    </div>
                    <h1 class="detail-title">
                        <%= product.model %>
                    </h1>
                    <% %>

                        <!-- Category Chips -->
                        <% if (productCategories && productCategories.length> 0) { %>
                            <div class="product-categories-wrapper mb-3">
                                <div class="category-chips">
                                    <% productCategories.forEach(cat=> { %>
                                        <div class="category-chip">
                                            <i class="fa-solid fa-tag"></i>
                                            <span>
                                                <%= cat.name %>
                                            </span>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>
                            <% } %>

                                <!-- Supplier Information -->
                                <% if (supplier) { %>
                                    <div class="supplier-info mb-3">
                                        <div class="supplier-detail">
                                            <i class="fa-solid fa-truck"></i>
                                            <span class="supplier-label">Supplier:</span>
                                            <strong>
                                                <%= supplier.name %>
                                            </strong>
                                        </div>
                                        <% if (supplier.country_name) { %>
                                            <div class="supplier-detail">
                                                <i class="fa-solid fa-globe"></i>
                                                <span class="supplier-label">Origin:</span>
                                                <strong>
                                                    <%= supplier.country_name %>
                                                </strong>
                                            </div>
                                            <% } %>
                                    </div>
                                    <% } %>
                </div>

                <div class="detail-description mb-4">
                    <p style="white-space: pre-line;">
                        <%= product.description %>
                    </p>
                </div>

                <div class="detail-actions">
                    <a href="https://wa.me/01121194948?text=Hello,%20I%20would%20like%20to%20get%20a%20quote%20for%20<%= encodeURIComponent(product.model || product.code) %>"
                        target="_blank" class="btn btn-primary btn-lg px-5">
                        <i class="fa-solid fa-paper-plane"></i> Get a Quote
                    </a>
                    <% if (typeof companyBrochure !=='undefined' && companyBrochure) { %>
                        <% const brochureExt=companyBrochure.file_path ?
                            companyBrochure.file_path.split('.').pop().toLowerCase() : '' ; const isGoogleDriveBrochure = companyBrochure.file_path && companyBrochure.file_path.includes('drive.google.com'); let
                            brochurePreviewType='file' ; if (brochureExt==='pdf' ) brochurePreviewType='pdf' ; else if
                            (['jpg', 'jpeg' , 'png' , 'gif' , 'webp' ].includes(brochureExt) || isGoogleDriveBrochure)
                            brochurePreviewType='image' ; else if (['doc', 'docx' , 'xls' , 'xlsx' , 'ppt' , 'pptx'
                            ].includes(brochureExt)) brochurePreviewType='office' ; %>
                            <a href="<%= companyBrochure.file_path %>" target="_blank"
                                class="btn btn-outline-primary btn-lg <%= ['pdf', 'image', 'office'].includes(brochurePreviewType) ? 'preview-trigger' : '' %>"
                                data-preview-type="<%= brochurePreviewType %>"
                                data-preview-src="<%= companyBrochure.file_path %>"
                                data-preview-title="Company Brochure">
                                <i class="fa-solid fa-download"></i> Brochure
                            </a>
                            <% } %>
                                <button class="btn btn-secondary btn-lg" id="shareButton">
                                    <i class="fa-solid fa-share-nodes"></i> Share
                                </button>
                </div>

                <div class="trust-indicators mt-5">
                    <div class="trust-item">
                        <i class="fa-solid fa-truck-fast"></i>
                        <span>Reliable Logistics</span>
                    </div>
                    <div class="trust-item">
                        <i class="fa-solid fa-screwdriver-wrench"></i>
                        <span>Technical Support</span>
                    </div>
                    <div class="trust-item">
                        <i class="fa-solid fa-check-double"></i>
                        <span>Quality Assured</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Interactive Content Tabs -->
    <div class="detail-tabs-section card">
        <div class="tabs-nav">
            <button class="tab-trigger active" data-tab="specs">
                <i class="fa-solid fa-list-check"></i> Specifications
            </button>
            <% if (materials.flyers.length> 0) { %>
                <button class="tab-trigger" data-tab="flyers">
                    <i class="fa-solid fa-file-pdf"></i> Flyers
                </button>
                <% } %>
                    <% if (materials.backdrops.length> 0) { %>
                        <button class="tab-trigger" data-tab="backdrops">
                            <i class="fa-solid fa-panorama"></i> Backdrops
                        </button>
                        <% } %>
                            <% if (materials.posters.length> 0) { %>
                                <button class="tab-trigger" data-tab="posters">
                                    <i class="fa-solid fa-image"></i> Posters
                                </button>
                                <% } %>
                                    <% if (materials.rollups.length> 0) { %>
                                        <button class="tab-trigger" data-tab="rollups">
                                            <i class="fa-solid fa-scroll"></i> Roll Ups
                                        </button>
                                        <% } %>
                                            <% if (materials.others.length> 0) { %>
                                                <button class="tab-trigger" data-tab="others">
                                                    <i class="fa-solid fa-box-archive"></i> Resources
                                                </button>
                                                <% } %>
                                                    <button class="tab-trigger" data-tab="events">
                                                        <i class="fa-solid fa-calendar-days"></i> Events
                                                    </button>
                                                    <button class="tab-trigger" data-tab="testimonies">
                                                        <i class="fa-solid fa-star"></i> Testimonies
                                                    </button>
        </div>

        <div class="tab-content-container">
            <!-- Specifications -->
            <div class="tab-pane active" id="specs">
                <% if (specs.length> 0) { %>
                    <div class="specs-table-wrapper">
                        <table class="specs-table">
                            <thead>
                                <tr>
                                    <th class="spec-header">Specification</th>
                                    <th class="spec-header">
                                        <%= product.model || product.code %>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% specs.forEach((s)=> { %>
                                    <tr class="spec-row">
                                        <td class="spec-label">
                                            <%= s.spec_key %>
                                        </td>
                                        <td class="spec-value">
                                            <%= s.spec_value %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <div class="pane-empty">
                            <i class="fa-solid fa-clipboard-question"></i>
                            <p>No technical specifications listed for this product yet.</p>
                        </div>
                        <% } %>
            </div>

            <!-- Flyers -->
            <% if (materials.flyers.length> 0) { %>
                <div class="tab-pane" id="flyers">
                    <div class="grid grid-3">
                        <% materials.flyers.forEach(m=> { %>
                            <% const fileExt=m.file_path ? m.file_path.split('.').pop().toLowerCase() : '' ; const isGoogleDrive = m.file_path && m.file_path.includes('drive.google.com'); let
                                previewType='file' ; if (fileExt==='pdf' ) previewType='pdf' ; else if (['jpg', 'jpeg'
                                , 'png' , 'gif' , 'webp' ].includes(fileExt) || isGoogleDrive) previewType='image' ; else if
                                (['doc', 'docx' , 'xls' , 'xlsx' , 'ppt' , 'pptx' ].includes(fileExt))
                                previewType='office' ; %>
                                <a href="<%= m.file_path %>" target="_blank"
                                    class="resource-card <%= ['pdf', 'image', 'office'].includes(previewType) ? 'preview-trigger' : '' %>"
                                    data-preview-type="<%= previewType %>" data-preview-src="<%= m.file_path %>"
                                    data-preview-title="<%= m.name %>">
                                    <div class="resource-icon">
                                        <i class="fa-solid fa-file-pdf"></i>
                                    </div>
                                    <div class="resource-info">
                                        <h4 class="resource-title">
                                            <%= m.name %>
                                        </h4>
                                        <span class="resource-action">View Flyer <i
                                                class="fa-solid fa-expand"></i></span>
                                    </div>
                                </a>
                                <% }) %>
                    </div>
                </div>
                <% } %>

                    <!-- Backdrops -->
                    <% if (materials.backdrops.length> 0) { %>
                        <div class="tab-pane" id="backdrops">
                            <div class="grid grid-3">
                                <% materials.backdrops.forEach(m=> { %>
                                    <% const fileExt=m.file_path ? m.file_path.split('.').pop().toLowerCase() : '' ; const isGoogleDrive = m.file_path && m.file_path.includes('drive.google.com'); let
                                        previewType='file' ; if (fileExt==='pdf' ) previewType='pdf' ; else if
                                        (['jpg', 'jpeg' , 'png' , 'gif' , 'webp' ].includes(fileExt) || isGoogleDrive)
                                        previewType='image' ; else if (['doc', 'docx' , 'xls' , 'xlsx' , 'ppt' , 'pptx'
                                        ].includes(fileExt)) previewType='office' ; %>
                                        <a href="<%= m.file_path %>" target="_blank"
                                            class="resource-card <%= ['pdf', 'image', 'office'].includes(previewType) ? 'preview-trigger' : '' %>"
                                            data-preview-type="<%= previewType %>" data-preview-src="<%= m.file_path %>"
                                            data-preview-title="<%= m.name %>">
                                            <div class="resource-icon">
                                                <i class="fa-solid fa-panorama"></i>
                                            </div>
                                            <div class="resource-info">
                                                <h4 class="resource-title">
                                                    <%= m.name %>
                                                </h4>
                                                <span class="resource-action">View Backdrop <i
                                                        class="fa-solid fa-eye"></i></span>
                                            </div>
                                        </a>
                                        <% }) %>
                            </div>
                        </div>
                        <% } %>

                            <!-- Posters -->
                            <% if (materials.posters.length> 0) { %>
                                <div class="tab-pane" id="posters">
                                    <div class="grid grid-3">
                                        <% materials.posters.forEach(m=> { %>
                                            <% const fileExt=m.file_path ? m.file_path.split('.').pop().toLowerCase()
                                                : '' ; const isGoogleDrive = m.file_path && m.file_path.includes('drive.google.com'); let previewType='file' ; if (fileExt==='pdf' ) previewType='pdf'
                                                ; else if (['jpg', 'jpeg' , 'png' , 'gif' , 'webp' ].includes(fileExt) || isGoogleDrive)
                                                previewType='image' ; else if (['doc', 'docx' , 'xls' , 'xlsx' , 'ppt'
                                                , 'pptx' ].includes(fileExt)) previewType='office' ; %>
                                                <a href="<%= m.file_path %>" target="_blank"
                                                    class="resource-card <%= ['pdf', 'image', 'office'].includes(previewType) ? 'preview-trigger' : '' %>"
                                                    data-preview-type="<%= previewType %>"
                                                    data-preview-src="<%= m.file_path %>"
                                                    data-preview-title="<%= m.name %>">
                                                    <div class="resource-icon">
                                                        <i class="fa-solid fa-image"></i>
                                                    </div>
                                                    <div class="resource-info">
                                                        <h4 class="resource-title">
                                                            <%= m.name %>
                                                        </h4>
                                                        <span class="resource-action">View Poster <i
                                                                class="fa-solid fa-expand"></i></span>
                                                    </div>
                                                </a>
                                                <% }) %>
                                    </div>
                                </div>
                                <% } %>

                                    <!-- Roll Ups -->
                                    <% if (materials.rollups.length> 0) { %>
                                        <div class="tab-pane" id="rollups">
                                            <div class="grid grid-3">
                                                <% materials.rollups.forEach(m=> { %>
                                                    <% const fileExt=m.file_path ?
                                                        m.file_path.split('.').pop().toLowerCase() : '' ; const isGoogleDrive = m.file_path && m.file_path.includes('drive.google.com'); let
                                                        previewType='file' ; if (fileExt==='pdf' ) previewType='pdf' ;
                                                        else if (['jpg', 'jpeg' , 'png' , 'gif' , 'webp'
                                                        ].includes(fileExt) || isGoogleDrive) previewType='image' ; else if
                                                        (['doc', 'docx' , 'xls' , 'xlsx' , 'ppt' , 'pptx'
                                                        ].includes(fileExt)) previewType='office' ; %>
                                                        <a href="<%= m.file_path %>" target="_blank"
                                                            class="resource-card <%= ['pdf', 'image', 'office'].includes(previewType) ? 'preview-trigger' : '' %>"
                                                            data-preview-type="<%= previewType %>"
                                                            data-preview-src="<%= m.file_path %>"
                                                            data-preview-title="<%= m.name %>">
                                                            <div class="resource-icon">
                                                                <i class="fa-solid fa-scroll"></i>
                                                            </div>
                                                            <div class="resource-info">
                                                                <h4 class="resource-title">
                                                                    <%= m.name %>
                                                                </h4>
                                                                <span class="resource-action">View Roll Up <i
                                                                        class="fa-solid fa-scroll"></i></span>
                                                            </div>
                                                        </a>
                                                        <% }) %>
                                            </div>
                                        </div>
                                        <% } %>

                                            <!-- Other Resources -->
                                            <% if (materials.others.length> 0) { %>
                                                <div class="tab-pane" id="others">
                                                    <div class="grid grid-3">
                                                        <% materials.others.forEach(m=> { %>
                                                            <% const fileExt=m.file_path ?
                                                                m.file_path.split('.').pop().toLowerCase() : '' ; const isGoogleDrive = m.file_path && m.file_path.includes('drive.google.com'); let
                                                                previewType='file' ; let isVideo=false; let videoId='' ;
                                                                if (fileExt==='pdf' ) previewType='pdf' ; else if
                                                                (['jpg', 'jpeg' , 'png' , 'gif' , 'webp'
                                                                ].includes(fileExt) || isGoogleDrive) previewType='image' ; else if
                                                                (['doc', 'docx' , 'xls' , 'xlsx' , 'ppt' , 'pptx'
                                                                ].includes(fileExt)) previewType='office' ; else if
                                                                (m.file_path.includes('youtube.com') ||
                                                                m.file_path.includes('youtu.be')) { previewType='video'
                                                                ; isVideo=true; const
                                                                regExp=/^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|\&v=)([^#\&\?]*).*/;
                                                                const match=m.file_path.match(regExp); videoId=(match &&
                                                                match[2].length===11) ? match[2] : null; } %>
                                                                <a href="<%= m.file_path %>" target="_blank"
                                                                    class="resource-card preview-trigger"
                                                                    data-preview-type="<%= previewType %>"
                                                                    data-preview-src="<%= m.file_path %>"
                                                                    data-preview-title="<%= m.name %>">
                                                                    <div class="resource-icon"
                                                                        style="<%= isVideo ? 'padding: 0; width: 100px;' : '' %>">
                                                                        <% if (isVideo && videoId) { %>
                                                                            <div class="video-thumbnail-container"
                                                                                style="background-image: url('https://img.youtube.com/vi/<%= videoId %>/mqdefault.jpg')">
                                                                                <i
                                                                                    class="fa-solid fa-play play-overlay"></i>
                                                                            </div>
                                                                            <% } else { %>
                                                                                <% let iconClass='fa-file' ; if
                                                                                    (fileExt==='pdf' )
                                                                                    iconClass='fa-file-pdf' ; else if
                                                                                    (['doc', 'docx' ].includes(fileExt))
                                                                                    iconClass='fa-file-word' ; else if
                                                                                    (['xls', 'xlsx' ].includes(fileExt))
                                                                                    iconClass='fa-file-excel' ; else if
                                                                                    (['ppt', 'pptx' ].includes(fileExt))
                                                                                    iconClass='fa-file-powerpoint' ;
                                                                                    else if (['jpg', 'jpeg' , 'png'
                                                                                    , 'gif' , 'webp'
                                                                                    ].includes(fileExt))
                                                                                    iconClass='fa-file-image' ; %>
                                                                                    <i
                                                                                        class="fa-solid <%= iconClass %>"></i>
                                                                                    <% } %>
                                                                    </div>
                                                                    <div class="resource-info">
                                                                        <h4 class="resource-title">
                                                                            <%= m.name %>
                                                                        </h4>
                                                                        <span class="resource-action">
                                                                            <%= isVideo ? 'Watch Video'
                                                                                : 'View Resource' %>
                                                                                <i
                                                                                    class="fa-solid <%= isVideo ? 'fa-play' : 'fa-arrow-right' %>"></i>
                                                                        </span>
                                                                    </div>
                                                                </a>
                                                                <% }) %>
                                                    </div>
                                                </div>
                                                <% } %>

                                                    <!-- Events -->
                                                    <div class="tab-pane" id="events">
                                                        <% if (events.length> 0) { %>
                                                            <div class="grid grid-2">
                                                                <% events.forEach(e=> { %>
                                                                    <div class="event-capsule <%= e.video_link ? 'preview-trigger' : '' %>"
                                                                        style="cursor: <%= e.video_link ? 'pointer' : 'default' %>"
                                                                        <% if (e.video_link) { %>
                                                                        data-preview-type="video"
                                                                        data-preview-src="<%= e.video_link.url %>"
                                                                            data-preview-title="<%= e.name %>"
                                                                                <% } %>>
                                                                                    <div class="event-date">
                                                                                        <span class="month">
                                                                                            <%= e.start_date ? new
                                                                                                Date(e.start_date).toLocaleString('default',
                                                                                                { month: 'short' })
                                                                                                : '---' %>
                                                                                        </span>
                                                                                        <span class="day">
                                                                                            <%= e.start_date ? new
                                                                                                Date(e.start_date).getDate()
                                                                                                : '--' %>
                                                                                        </span>
                                                                                        <span class="year">
                                                                                            <%= e.start_date ? new
                                                                                                Date(e.start_date).getFullYear()
                                                                                                : '----' %>
                                                                                        </span>
                                                                                    </div>
                                                                                    <div class="event-body">
                                                                                        <div
                                                                                            class="d-flex justify-content-between align-items-start">
                                                                                            <div>
                                                                                                <h4>
                                                                                                    <%= e.name %>
                                                                                                </h4>
                                                                                                <p class="location"><i
                                                                                                        class="fa-solid fa-location-dot"></i>
                                                                                                    <%= e.location %>
                                                                                                </p>
                                                                                            </div>
                                                                                            <% if (e.video_link) { %>
                                                                                                <% const
                                                                                                    regExp=/^.*(youtu.be\/|v\/|u\/\w\/|embed\/|watch\?v=|\&v=)([^#\&\?]*).*/;
                                                                                                    const
                                                                                                    match=e.video_link.url.match(regExp);
                                                                                                    const videoId=(match
                                                                                                    &&
                                                                                                    match[2].length===11)
                                                                                                    ? match[2] : null;
                                                                                                    %>
                                                                                                    <% if (videoId) { %>
                                                                                                        <div class="event-video-thumb preview-trigger"
                                                                                                            data-preview-type="video"
                                                                                                            data-preview-src="<%= e.video_link.url %>"
                                                                                                            data-preview-title="<%= e.name %>"
                                                                                                            style="width: 120px; height: 68px; background-image: url('https://img.youtube.com/vi/<%= videoId %>/mqdefault.jpg'); background-size: cover; border-radius: 8px; position: relative; margin-left: 1rem; flex-shrink: 0;">
                                                                                                            <div
                                                                                                                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; background: rgba(0,0,0,0.2); border-radius: 8px;">
                                                                                                                <i class="fa-solid fa-play"
                                                                                                                    style="color: white; font-size: 1.2rem;"></i>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                        <% } %>
                                                                                                            <% } %>
                                                                                        </div>
                                                                                        <div class="event-actions mt-3">
                                                                                            <div
                                                                                                class="multimedia-links">
                                                                                                <% if (e.links &&
                                                                                                    e.links.length> 0) {
                                                                                                    %>
                                                                                                    <%
                                                                                                        // Filter out the video_link from links to avoid duplication
                                                                                                        const videoLinkUrl = e.video_link ? e.video_link.url : null;
                                                                                                        const filteredLinks = e.links.filter(link => {
                                                                                                            if (!videoLinkUrl) return true;
                                                                                                            const linkUrl = link.url || '';
                                                                                                            // Compare URLs, handling different formats
                                                                                                            return linkUrl !== videoLinkUrl && 
                                                                                                                   !linkUrl.includes(videoLinkUrl) && 
                                                                                                                   !videoLinkUrl.includes(linkUrl);
                                                                                                        });
                                                                                                        filteredLinks.forEach(link=>
                                                                                                        { %>
                                                                                                        <% const
                                                                                                            url=link.url
