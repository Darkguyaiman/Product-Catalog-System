        let touchStartY = 0;
        let touchEndY = 0;
        const minSwipeDistance = 50;

        // Initialize: Ensure first slide is visible and hide others
        if (totalImages > 0) {
            // Hide all slides first
            slides.forEach((slide, idx) => {
                slide.style.zIndex = '0';
                if (!slide.classList.contains('active')) {
                    slide.style.opacity = '0';
                    slide.style.visibility = 'hidden';
                }
            });

            // Find the slide that already has the active class (from server-side)
            const activeSlide = document.querySelector('.slide.active');
            if (activeSlide) {
                currentIndex = parseInt(activeSlide.dataset.index) || 0;
                // Force visibility and z-index
                activeSlide.style.opacity = '1';
                activeSlide.style.visibility = 'visible';
                activeSlide.style.transform = 'translateX(0) scale(1)';
                activeSlide.style.zIndex = '2';
            } else {
                // If no active slide found, activate the first one
                if (slides[0]) {
                    slides[0].classList.add('active');
                    slides[0].style.opacity = '1';
                    slides[0].style.visibility = 'visible';
                    slides[0].style.transform = 'translateX(0) scale(1)';
                    slides[0].style.zIndex = '2';
                    currentIndex = 0;
                }
            }
        }

        // Update indicator
        function updateIndicator() {
            if (currentIndexSpan) {
                currentIndexSpan.textContent = currentIndex + 1;
            }
        }

        // Show slide with animation
        function showSlide(index, direction = 'next') {
            if (isTransitioning || index < 0 || index >= totalImages) return;

            isTransitioning = true;
            const prevIndex = currentIndex;
            currentIndex = index;

            // First, hide all slides and reset z-index
            slides.forEach((slide, idx) => {
                slide.classList.remove('active', 'prev', 'next');
                slide.style.zIndex = '0';
                if (idx !== currentIndex) {
                    slide.style.opacity = '0';
                    slide.style.visibility = 'hidden';
                }
            });

            // Add appropriate classes for animation
            if (direction === 'next') {
                if (slides[prevIndex]) {
                    slides[prevIndex].classList.add('prev');
                    slides[prevIndex].style.zIndex = '0';
                }
                if (slides[currentIndex]) {
                    slides[currentIndex].classList.add('active');
                    slides[currentIndex].style.zIndex = '2';
                }
            } else {
                if (slides[prevIndex]) {
                    slides[prevIndex].classList.add('next');
                    slides[prevIndex].style.zIndex = '0';
                }
                if (slides[currentIndex]) {
                    slides[currentIndex].classList.add('active');
                    slides[currentIndex].style.zIndex = '2';
                }
            }

            // Update thumbnails
            thumbnails.forEach((thumb, idx) => {
                thumb.classList.toggle('active', idx === currentIndex);
            });

            updateIndicator();

            // Reset transition lock after animation and ensure only active is visible
            setTimeout(() => {
                isTransitioning = false;
                slides.forEach((slide, idx) => {
                    slide.classList.remove('prev', 'next');
                    if (idx !== currentIndex) {
                        slide.style.zIndex = '0';
                        slide.style.opacity = '0';
                        slide.style.visibility = 'hidden';
                    } else {
                        slide.style.zIndex = '2';
                        slide.style.opacity = '1';
                        slide.style.visibility = 'visible';
                    }
                });
            }, 500);
        }

        // Next image
        function nextImage() {
            const nextIndex = (currentIndex + 1) % totalImages;
            showSlide(nextIndex, 'next');
        }

        // Previous image
        function prevImage() {
            const prevIndex = (currentIndex - 1 + totalImages) % totalImages;
            showSlide(prevIndex, 'prev');
        }

        // Navigation buttons
        if (prevBtn && nextBtn && totalImages > 1) {
            prevBtn.addEventListener('click', prevImage);
            nextBtn.addEventListener('click', nextImage);
        }

        // Thumbnail click handler
        thumbnails.forEach((thumbnail, index) => {
            thumbnail.addEventListener('click', function () {
                if (index !== currentIndex && !isTransitioning) {
                    const direction = index > currentIndex ? 'next' : 'prev';
                    showSlide(index, direction);
                }
            });
        });

        // Touch/Swipe support
        if (mainImageWrapper && totalImages > 1) {
            mainImageWrapper.addEventListener('touchstart', function (e) {
                touchStartX = e.changedTouches[0].screenX;
                touchStartY = e.changedTouches[0].screenY;
            }, { passive: true });

            mainImageWrapper.addEventListener('touchend', function (e) {
                touchEndX = e.changedTouches[0].screenX;
                touchEndY = e.changedTouches[0].screenY;
                handleSwipe();
            }, { passive: true });

            // Mouse drag support for desktop
            let isMouseDown = false;
            let mouseStartX = 0;

            mainImageWrapper.addEventListener('mousedown', function (e) {
                isMouseDown = true;
                mouseStartX = e.clientX;
                mainImageWrapper.style.cursor = 'grabbing';
            });

            mainImageWrapper.addEventListener('mousemove', function (e) {
                if (isMouseDown) {
                    // Prevent text selection while dragging
                    e.preventDefault();
                }
            });

            mainImageWrapper.addEventListener('mouseup', function (e) {
                if (isMouseDown) {
                    const mouseEndX = e.clientX;
                    const deltaX = mouseEndX - mouseStartX;

                    if (Math.abs(deltaX) > minSwipeDistance) {
                        if (deltaX > 0) {
                            prevImage();
                        } else {
                            nextImage();
                        }
                    }

                    isMouseDown = false;
                    mainImageWrapper.style.cursor = 'grab';
                }
            });

            mainImageWrapper.addEventListener('mouseleave', function () {
                isMouseDown = false;
                mainImageWrapper.style.cursor = 'grab';
            });

            mainImageWrapper.style.cursor = 'grab';
        }

        function handleSwipe() {
            const deltaX = touchEndX - touchStartX;
            const deltaY = touchEndY - touchStartY;

            // Check if horizontal swipe is greater than vertical (to avoid conflicts with scrolling)
            if (Math.abs(deltaX) > Math.abs(deltaY) && Math.abs(deltaX) > minSwipeDistance) {
                if (deltaX > 0) {
                    // Swipe right - previous image
                    prevImage();
                } else {
                    // Swipe left - next image
                    nextImage();
                }
            }
        }

        // Keyboard navigation
        document.addEventListener('keydown', function (e) {
            if (totalImages <= 1) return;

            if (e.key === 'ArrowLeft') {
                e.preventDefault();
                prevImage();
            } else if (e.key === 'ArrowRight') {
                e.preventDefault();
                nextImage();
            }
        });

        // Initialize
        updateIndicator();
    });

    function switchTab(evt, tabName) {
        // Hide all tab content
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName("tab-content");
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }

        // Remove active class from all buttons
        tablinks = document.getElementsByClassName("tab-btn");
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
            tablinks[i].style.color = "var(--gray-600)";
            tablinks[i].style.borderBottom = "3px solid transparent";
        }

        // Show the current tab and add active class
        document.getElementById(tabName).style.display = "block";
        evt.currentTarget.className += " active";
        evt.currentTarget.style.color = "var(--blue-medium)";
        evt.currentTarget.style.borderBottom = "3px solid var(--blue-medium)";
    }
</script>