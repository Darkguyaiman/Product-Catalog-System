<div class="suppliers-page">
    <div class="card-header supplier-header"
        style="justify-content: space-between; align-items: center; border-bottom: none; margin-bottom: 0; padding-bottom: 2rem; margin-top: 2rem;">
        <h1 style="margin: 0;">Suppliers</h1>
        <a href="/admin/suppliers/add" class="btn btn-primary add-supplier-btn">
            <i class="fas fa-plus"></i> <span>Add New Supplier</span>
        </a>
    </div>

    <div class="card desktop-only">
        <!-- Search Form -->
        <form action="/admin/suppliers" method="GET"
            style="padding-bottom: 1.5rem; border-bottom: 1px solid var(--gray-200); margin-bottom: 1.5rem; display: flex; gap: 1rem;">
            <div style="position: relative; flex: 1; max-width: 600px;">
                <i class="fas fa-search"
                    style="position: absolute; left: 1rem; top: 50%; transform: translateY(-50%); color: var(--gray-400);"></i>
                <input type="text" name="search" placeholder="Search suppliers (Press Enter)..."
                    value="<%= typeof search !== 'undefined' ? search : '' %>"
                    style="width: 100%; padding: 0.75rem 1rem 0.75rem 2.5rem; border: 1px solid var(--gray-300); border-radius: 6px;">
            </div>
        </form>
        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Country</th>
                        <th>Affiliated Companies</th>
                        <th style="width: 120px; text-align: center;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (suppliers.length===0) { %>
                        <tr>
                            <td colspan="4" style="text-align: center; padding: 2rem; color: var(--gray-500);">
                                No suppliers found. Click "Add New Supplier" to get started.
                            </td>
                        </tr>
                        <% } %>
                            <% suppliers.forEach(s=> { %>
                                <tr>
                                    <td>
                                        <div style="font-weight: 700; color: var(--blue-darkest);">
                                            <%= s.name %>
                                        </div>
                                    </td>
                                    <td>
                                        <%= s.country %>
                                    </td>
                                    <td>
                                        <% if (s.company_ids && s.company_ids.length> 0) {
                                            const linked = companies.filter(c => s.company_ids.includes(c.id));
                                            %>
                                            <% linked.forEach(c=> { %>
                                                <span class="chip-static">
                                                    <%= c.name %>
                                                </span>
                                                <% }) %>
                                                    <% } else { %>
                                                        <span style="color: var(--gray-500);">-</span>
                                                        <% } %>
                                    </td>
                                    <td>
                                        <div style="display: flex; gap: 8px; justify-content: center;">
                                            <a href="/admin/suppliers/edit/<%= s.id %>" class="btn btn-secondary btn-sm"
                                                title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button
                                                onclick="openDeleteModal('/admin/suppliers/delete/<%= s.id %>', 'Delete supplier \'<%= s.name %>\'?')"
                                                class="btn btn-danger btn-sm" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Mobile Cards -->
    <div class="mobile-category-cards">
        <% suppliers.forEach(s=> { %>
            <div class="category-card">
                <div class="category-card-header">
                    <div class="category-card-name">
                        <%= s.name %>
                    </div>
                    <div class="category-card-actions">
                        <a href="/admin/suppliers/edit/<%= s.id %>" class="btn btn-secondary btn-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                        <button
                            onclick="openDeleteModal('/admin/suppliers/delete/<%= s.id %>', 'Delete supplier \'<%= s.name %>\'?')"
                            class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                <div class="category-card-details" style="flex-direction: column; align-items: flex-start; gap: 8px;">
                    <div style="font-size: 0.85rem;"><strong>Country:</strong>
                        <%= s.country %>
                    </div>
                    <% if (s.company_ids && s.company_ids.length> 0) {
                        const linked = companies.filter(c => s.company_ids.includes(c.id));
                        %>
                        <div style="display: flex; flex-wrap: wrap; gap: 4px; margin-top: 4px;">
                            <% linked.forEach(c=> { %>
                                <span class="chip-static" style="font-size: 0.75rem; padding: 0.15rem 0.5rem;">
                                    <%= c.name %>
                                </span>
                                <% }) %>
                        </div>
                        <% } %>
                </div>
            </div>
            <% }) %>
    </div>
</div>

<!-- Shared Delete Modal -->
<div id="modalOverlay" class="modal-overlay" style="display: none;">
    <div class="custom-modal-content" style="border-top: 4px solid var(--danger);">
        <div style="text-align: center; padding: 1rem 0;">
            <div
                style="width: 60px; height: 60px; background: #fee2e2; color: var(--danger); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem; font-size: 1.5rem;">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h3 style="margin-bottom: 0.5rem;">Are you sure?</h3>
            <p id="deleteModalMessage" style="color: var(--gray-600); font-size: 0.95rem;">This action cannot be undone.
            </p>
        </div>
        <div style="display: flex; gap: 10px; margin-top: 1.5rem;">
            <button type="button" onclick="closeAllModals()" class="btn btn-secondary" style="flex: 1;">Cancel</button>
            <form id="deleteConfirmForm" method="POST" style="flex: 1;">
                <button type="submit" class="btn btn-danger" style="width: 100%;">Yes, Delete</button>
            </form>
        </div>
    </div>
</div>

<script>
    function openDeleteModal(actionUrl, message) {
        const overlay = document.getElementById('modalOverlay');
        const form = document.getElementById('deleteConfirmForm');
        const messageEl = document.getElementById('deleteModalMessage');
        form.action = actionUrl;
        messageEl.textContent = message;
        overlay.style.display = 'flex';
    }

    function closeAllModals() {
        document.getElementById('modalOverlay').style.display = 'none';
    }

    window.onclick = function (event) {
        if (event.target == document.getElementById('modalOverlay')) {
            closeAllModals();
        }
    }
</script>