<h1>Settings</h1>

<div class="tabs">
    <a href="/admin/settings" class="tab" style="text-decoration: none; color: inherit;">General Settings</a>
    <a href="/admin/settings/categories" class="tab" style="text-decoration: none; color: inherit;">Categories</a>
    <div class="tab active">Users</div>
</div>

<div class="card">
    <h3>Add New User</h3>
    <form action="/admin/settings/users/add" method="POST" class="form-group responsive-flex items-end">
        <div class="flex-1">
            <label>Email Address</label>
            <input type="email" name="email" required placeholder="user@example.com">
        </div>
        <div class="flex-1">
            <label>Password</label>
            <div style="position: relative;">
                <input type="password" name="password" id="userPassword" required placeholder="Minimum 6 characters"
                    style="padding-right: 40px;">
                <button type="button" id="toggleUserPassword"
                    style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); background: none; border: none; cursor: pointer; color: var(--gray-400);">
                    <i class="fa-solid fa-eye" id="userEyeIcon"></i>
                </button>
            </div>
        </div>
        <div class="flex-1">
            <label>Role</label>
            <select name="role" required>
                <% if (user.role==='Super Admin' ) { %>
                    <option value="Super Admin">Super Admin</option>
                    <% } %>
                        <option value="Admin">Admin</option>
                        <option value="Product Specialist" selected>Product Specialist</option>
                        <option value="Graphic Designer">Graphic Designer</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Add User</button>
    </form>

    <div class="table-responsive" style="margin-top: 2rem;">
        <table>
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Role</th>
                    <th style="width: 120px;">Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(u) { %>
                    <tr>
                        <td>
                            <%= u.email %>
                        </td>
                        <td>
                            <span
                                class="badge <%= u.role === 'Super Admin' ? 'badge-dark' : (u.role === 'Admin' ? 'badge-primary' : (u.role === 'Product Specialist' ? 'badge-success' : 'badge-info')) %>">
                                <%= u.role %>
                            </span>
                        </td>
                        <td>
                            <div style="display: flex; gap: 5px;">
                                <button onclick="openEditUserModal('<%= u.id %>', '<%= u.email %>', '<%= u.role %>')"
                                    class="btn btn-secondary" style="padding: 4px 8px; font-size: 12px;">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <% if (user.role==='Super Admin' && u.id !==user.id) { %>
                                    <button
                                        onclick="openDeleteModal('/admin/settings/users/delete/<%= u.id %>', 'Are you sure you want to delete the user \'<%= u.email %>\'?')"
                                        class="btn btn-danger" style="padding: 4px 8px; font-size: 12px;">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    <% } %>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Mobile Card View -->
    <div class="mobile-category-cards">
        <% users.forEach(function(u) { %>
            <div class="category-card">
                <div class="category-card-header">
                    <div class="category-card-name">
                        <%= u.email %>
                    </div>
                    <div class="category-card-actions">
                        <button onclick="openEditUserModal('<%= u.id %>', '<%= u.email %>', '<%= u.role %>')"
                            class="btn btn-secondary btn-sm">
                            <i class="fas fa-edit"></i>
                        </button>
                        <% if (user.role==='Super Admin' && u.id !==user.id) { %>
                            <button
                                onclick="openDeleteModal('/admin/settings/users/delete/<%= u.id %>', 'Delete user \'<%= u.email %>\'?')"
                                class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </button>
                            <% } %>
                    </div>
                </div>
                <div class="category-card-details">
                    <span
                        class="badge <%= u.role === 'Super Admin' ? 'badge-dark' : (u.role === 'Admin' ? 'badge-primary' : (u.role === 'Product Specialist' ? 'badge-success' : 'badge-info')) %>">
                        <%= u.role %>
                    </span>
                </div>
            </div>
            <% }); %>
    </div>
</div>

<!-- Custom Modals -->
<div id="modalOverlay" class="modal-overlay" style="display: none;">
    <!-- Edit User Modal -->
    <div id="editUserModal" class="custom-modal-content" style="display: none;">
        <div class="modal-header">
            <h3>Edit User</h3>
            <button onclick="closeAllModals()" class="close-btn">&times;</button>
        </div>
        <form id="editUserForm" method="POST" style="margin-top: 1rem;">
            <div class="form-group">
                <label>Email Address</label>
                <input type="email" name="email" id="edit_email" required>
            </div>
            <div class="form-group" style="margin-top: 1rem;">
                <label>Role</label>
                <select name="role" id="edit_role" required>
                    <% if (user.role==='Super Admin' ) { %>
                        <option value="Super Admin">Super Admin</option>
                        <% } %>
                            <option value="Admin">Admin</option>
                            <option value="Product Specialist">Product Specialist</option>
                            <option value="Graphic Designer">Graphic Designer</option>
                </select>
            </div>
            <div style="display: flex; gap: 10px; margin-top: 2rem;">
                <button type="button" onclick="closeAllModals()" class="btn btn-secondary"
                    style="flex: 1;">Cancel</button>
                <button type="submit" class="btn btn-primary" style="flex: 1;">Save Changes</button>
            </div>
        </form>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="deleteConfirmationModal" class="custom-modal-content"
        style="display: none; border-top: 4px solid var(--danger);">
        <div style="text-align: center; padding: 1rem 0;">
            <div
                style="width: 60px; height: 60px; background: #fee2e2; color: var(--danger); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem; font-size: 1.5rem;">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h3 style="margin-bottom: 0.5rem;">Are you sure?</h3>
            <p id="deleteModalMessage" style="color: var(--gray-600); font-size: 0.95rem;">This action cannot be undone.
            </p>
        </div>
        <div style="display: flex; gap: 10px; margin-top: 1.5rem;">
            <button type="button" onclick="closeAllModals()" class="btn btn-secondary" style="flex: 1;">Cancel</button>
            <form id="deleteConfirmForm" method="POST" style="flex: 1;">
                <button type="submit" class="btn btn-danger" style="width: 100%;">Yes, Delete</button>
            </form>
        </div>
    </div>
</div>

<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(4px);
        z-index: 2000;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .custom-modal-content {
        background: var(--white);
        padding: 2rem;
        border-radius: 12px;
        width: 100%;
        max-width: 400px;
        box-shadow: var(--shadow-lg);
        animation: modalScaleUp 0.2s ease-out;
    }

    .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid var(--gray-100);
        padding-bottom: 1rem;
    }

    .modal-header h3 {
        margin: 0;
        font-size: 1.25rem;
    }

    .close-btn {
        background: none;
        border: none;
        font-size: 1.5rem;
        color: var(--gray-400);
        cursor: pointer;
        line-height: 1;
    }

    @keyframes modalScaleUp {
        from {
            opacity: 0;
            transform: scale(0.95) translateY(10px);
        }

        to {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }
</style>

<script>
    function openEditUserModal(id, email, role) {
        const overlay = document.getElementById('modalOverlay');
        const modal = document.getElementById('editUserModal');
        const form = document.getElementById('editUserForm');
        const emailInput = document.getElementById('edit_email');
        const roleSelect = document.getElementById('edit_role');

        form.action = '/admin/settings/users/edit/' + id;
        emailInput.value = email;
        roleSelect.value = role;

        overlay.style.display = 'flex';
        modal.style.display = 'block';
        document.getElementById('deleteConfirmationModal').style.display = 'none';

        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function openDeleteModal(actionUrl, message) {
        const overlay = document.getElementById('modalOverlay');
        const modal = document.getElementById('deleteConfirmationModal');
        const form = document.getElementById('deleteConfirmForm');
        const messageEl = document.getElementById('deleteModalMessage');

        form.action = actionUrl;
        messageEl.textContent = message;

        overlay.style.display = 'flex';
        modal.style.display = 'block';
        document.getElementById('editUserModal').style.display = 'none';

        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function closeAllModals() {
        document.getElementById('modalOverlay').style.display = 'none';
    }

    document.getElementById('modalOverlay').addEventListener('click', function (e) {
        if (e.target === this) closeAllModals();
    });

    // Password Toggle Logic
    const toggleUserPassword = document.querySelector('#toggleUserPassword');
    const userPassword = document.querySelector('#userPassword');
    const userEyeIcon = document.querySelector('#userEyeIcon');

    if (toggleUserPassword) {
        toggleUserPassword.addEventListener('click', function () {
            const type = userPassword.getAttribute('type') === 'password' ? 'text' : 'password';
            userPassword.setAttribute('type', type);

            if (type === 'password') {
                userEyeIcon.classList.remove('fa-eye-slash');
                userEyeIcon.classList.add('fa-eye');
            } else {
                userEyeIcon.classList.remove('fa-eye');
                userEyeIcon.classList.add('fa-eye-slash');
            }
        });
    }
</script>