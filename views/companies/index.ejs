<div class="companies-page">
    <div class="card-header companies-header"
        style="justify-content: space-between; align-items: center; border-bottom: none; margin-bottom: 1rem; padding-bottom: 2rem; margin-top: 2rem;">
        <h1 style="margin: 0;">Affiliated Companies</h1>
        <a href="/admin/companies/add" class="btn btn-primary add-company-btn">
            <i class="fas fa-plus"></i> <span>Add New Company</span>
        </a>
    </div>

    <div class="card desktop-only">
        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th style="width: 80px;">Logo</th>
                        <th>Company Name</th>
                        <th>Shortname</th>
                        <th>Registration Info</th>
                        <th>Contact Info</th>
                        <th style="width: 120px; text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (companies.length===0) { %>
                        <tr>
                            <td colspan="5" style="text-align: center; padding: 2rem; color: var(--gray-500);">
                                No companies found. Click "Add New Company" to get started.
                            </td>
                        </tr>
                        <% } %>
                            <% companies.forEach(c=> { %>
                                <tr>
                                    <td>
                                        <div
                                            style="width: 50px; height: 50px; background: var(--gray-50); border-radius: 8px; display: flex; align-items: center; justify-content: center; overflow: hidden; border: 1px solid var(--gray-100);">
                                            <% if(c.logo) { %>
                                                <img src="<%= c.logo %>" alt="logo"
                                                    style="width: 100%; height: 100%; object-fit: contain;">
                                                <% } else { %>
                                                    <i class="fas fa-building"
                                                        style="color: var(--gray-300); font-size: 1.5rem;"></i>
                                                    <% } %>
                                        </div>
                                    </td>
                                    <td>
                                        <div style="font-weight: 700; color: var(--blue-darkest);">
                                            <%= c.name %>
                                        </div>
                                        <div style="font-size: 0.85rem; color: var(--gray-500);">
                                            <%= c.website || 'No website' %>
                                        </div>
                                    </td>
                                    <td>
                                        <% if(c.shortname) { %>
                                            <code
                                                style="background: var(--gray-100); padding: 2px 6px; border-radius: 4px; font-size: 0.85rem; color: var(--blue-medium);">
                                                <%= c.shortname %>
                                            </code>
                                            <div
                                                style="font-size: 0.75rem; color: var(--gray-400); margin-top: 4px; display: flex; gap: 8px; align-items: center;">
                                                <a href="/<%= c.shortname %>/home" target="_blank"
                                                    style="color: var(--blue-medium); text-decoration: none;">
                                                    <i class="fas fa-external-link-alt" style="font-size: 0.7rem;"></i>
                                                    Open
                                                </a>
                                                <button onclick="copyFullUrl('<%= c.shortname %>')"
                                                    style="background: none; border: none; color: var(--gray-500); cursor: pointer; font-size: 0.75rem; padding: 0; display: flex; align-items: center; gap: 4px;"
                                                    title="Copy full URL">
                                                    <i class="fas fa-copy" style="font-size: 0.7rem;"></i>
                                                    Copy URL
                                                </button>
                                            </div>
                                            <% } else { %>
                                                <span style="color: var(--gray-400); font-size: 0.85rem;">None</span>
                                                <% } %>
                                    </td>
                                    <td>
                                        <div style="font-size: 0.9rem;"><strong>Reg:</strong>
                                            <%= c.reg_no || 'N/A' %>
                                        </div>
                                        <div style="font-size: 0.85rem; color: var(--gray-500);">
                                            <strong>Date:</strong>
                                            <%= c.reg_date ? new Date(c.reg_date).toLocaleDateString() : 'N/A' %>
                                        </div>
                                    </td>
                                    <td>
                                        <div style="font-size: 0.9rem;"><i class="fas fa-phone"
                                                style="width: 16px; font-size: 0.8rem;"></i>
                                            <%= c.contact_number || 'N/A' %>
                                        </div>
                                        <div style="font-size: 0.9rem;"><i class="fas fa-envelope"
                                                style="width: 16px; font-size: 0.8rem;"></i>
                                            <%= c.email || 'N/A' %>
                                        </div>
                                    </td>
                                    <td>
                                        <div style="display: flex; gap: 8px; justify-content: center;">
                                            <a href="/admin/companies/edit/<%= c.id %>" class="btn btn-secondary btn-sm"
                                                title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button
                                                onclick="openDeleteModal('/admin/companies/delete/<%= c.id %>', 'Delete company \'<%= c.name %>\'?')"
                                                class="btn btn-danger btn-sm" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Mobile Cards -->
    <div class="mobile-category-cards">
        <% companies.forEach(c=> { %>
            <div class="category-card">
                <div class="category-card-header">
                    <div class="category-card-name">
                        <div
                            style="width: 40px; height: 40px; background: var(--gray-50); border-radius: 6px; display: flex; align-items: center; justify-content: center; overflow: hidden; border: 1px solid var(--gray-100); margin-right: 10px;">
                            <% if(c.logo) { %>
                                <img src="<%= c.logo %>" alt="logo"
                                    style="width: 100%; height: 100%; object-fit: contain;">
                                <% } else { %>
                                    <i class="fas fa-building" style="color: var(--gray-300);"></i>
                                    <% } %>
                        </div>
                        <%= c.name %>
                    </div>
                    <div class="category-card-actions">
                        <a href="/admin/companies/edit/<%= c.id %>" class="btn btn-secondary btn-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                        <button
                            onclick="openDeleteModal('/admin/companies/delete/<%= c.id %>', 'Delete company \'<%= c.name %>\'?')"
                            class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                <div class="category-card-details" style="flex-direction: column; align-items: flex-start; gap: 8px;">
                    <div style="font-size: 0.85rem;"><strong>Reg:</strong>
                        <%= c.reg_no || 'N/A' %> (<%= c.reg_date ? new Date(c.reg_date).toLocaleDateString() : 'No date'
                                %>)
                    </div>
                    <div style="font-size: 0.85rem;"><strong>Contact:</strong>
                        <%= c.contact_number || 'N/A' %>
                    </div>
                    <div style="font-size: 0.85rem;"><i class="fas fa-envelope" style="font-size: 0.75rem;"></i>
                        <%= c.email || 'N/A' %>
                    </div>
                    <% if(c.address) { %>
                        <div style="font-size: 0.85rem; color: var(--gray-600);"><i class="fas fa-location-dot"
                                style="font-size: 0.75rem;"></i>
                            <%= c.address %>
                        </div>
                        <% } %>
                            <% if(c.website) { %>
                                <div style="font-size: 0.85rem;"><i class="fas fa-globe"
                                        style="font-size: 0.75rem;"></i>
                                    <%= c.website %>
                                </div>
                                <% } %>
                                    <% if(c.shortname) { %>
                                        <div style="margin-top: 10px; display: flex; gap: 10px;">
                                            <a href="/<%= c.shortname %>/home" target="_blank"
                                                class="btn btn-secondary btn-sm" style="font-size: 0.75rem;">
                                                <i class="fas fa-external-link-alt"></i> Open Catalog
                                            </a>
                                            <button onclick="copyFullUrl('<%= c.shortname %>')"
                                                class="btn btn-secondary btn-sm" style="font-size: 0.75rem;">
                                                <i class="fas fa-copy"></i> Copy URL
                                            </button>
                                        </div>
                                        <% } %>
                </div>
            </div>
            <% }) %>
    </div>
</div>

<!-- Shared Delete Modal -->
<div id="modalOverlay" class="modal-overlay" style="display: none;">
    <div class="custom-modal-content" style="border-top: 4px solid var(--danger);">
        <div style="text-align: center; padding: 1rem 0;">
            <div
                style="width: 60px; height: 60px; background: #fee2e2; color: var(--danger); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem; font-size: 1.5rem;">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h3 style="margin-bottom: 0.5rem;">Are you sure?</h3>
            <p id="deleteModalMessage" style="color: var(--gray-600); font-size: 0.95rem;">This action cannot be undone.
            </p>
        </div>
        <div style="display: flex; gap: 10px; margin-top: 1.5rem;">
            <button type="button" onclick="closeAllModals()" class="btn btn-secondary" style="flex: 1;">Cancel</button>
            <form id="deleteConfirmForm" method="POST" style="flex: 1;">
                <button type="submit" class="btn btn-danger" style="width: 100%;">Yes, Delete</button>
            </form>
        </div>
    </div>
</div>

<script>
    function openDeleteModal(actionUrl, message) {
        const overlay = document.getElementById('modalOverlay');
        const form = document.getElementById('deleteConfirmForm');
        const messageEl = document.getElementById('deleteModalMessage');
        form.action = actionUrl;
        messageEl.textContent = message;
        overlay.style.display = 'flex';
    }

    function closeAllModals() {
        document.getElementById('modalOverlay').style.display = 'none';
    }

    function copyFullUrl(shortname) {
        const fullUrl = window.location.origin + '/' + shortname + '/home';
        navigator.clipboard.writeText(fullUrl).then(() => {
            showToast('URL Copied to clipboard!');
        }).catch(err => {
            console.error('Failed to copy: ', err);
        });
    }

    function showToast(message) {
        // Simple toast implementation
        const toast = document.createElement('div');
        toast.style.position = 'fixed';
        toast.style.bottom = '20px';
        toast.style.left = '50%';
        toast.style.transform = 'translateX(-50%)';
        toast.style.background = 'var(--blue-darkest)';
        toast.style.color = 'white';
        toast.style.padding = '10px 20px';
        toast.style.borderRadius = '8px';
        toast.style.boxShadow = '0 4px 12px rgba(0,0,0,0.15)';
        toast.style.zIndex = '9999';
        toast.style.fontSize = '0.9rem';
        toast.style.fontWeight = '500';
        toast.innerHTML = `<i class="fas fa-check-circle" style="margin-right: 8px; color: #4ade80;"></i> ${message}`;

        document.body.appendChild(toast);

        setTimeout(() => {
            toast.style.opacity = '0';
            toast.style.transition = 'opacity 0.5s';
            setTimeout(() => toast.remove(), 500);
        }, 3000);
    }

    window.onclick = function (event) {
        if (event.target == document.getElementById('modalOverlay')) {
            closeAllModals();
        }
    }
</script>